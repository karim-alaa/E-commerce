<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                 
                <a href="../" class="navbar-brand">FYG</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="themes">Who We Are <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="themes">
                            <li>@Html.ActionLink("About Us", "About", "basic")</li>
                            <li>@Html.ActionLink("Contact Us", "ContactUs", "basic")</li> 
                        
                        </ul>
                    </li>
                  
                
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download">Admin<span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="download">
                            <li>@Html.ActionLink("Add New Game", "AddGame", "admin")</li>
                            <li>@Html.ActionLink("Add New Category", "AddCategory", "admin")</li>
                            <li>@Html.ActionLink("Manage Games", "ManageGame", "admin")</li>
                            <li>@Html.ActionLink("Manage Articles", "ManageArticle", "admin")</li>
                            <li>@Html.ActionLink("Manage Categories", "ManageCategory", "admin")</li>
                            <li>@Html.ActionLink("Show statistics", "ShowStatistics", "admin")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download">Editor<span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="download">
                            <li>@Html.ActionLink("Add New Game", "AddGame", "editor")</li>
                            <li>@Html.ActionLink("Manage Games", "ManageGame", "editor")</li>
                            <li>@Html.ActionLink("Add New Article", "AddArticle", "editor")</li> 
                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Login", "Login", "auth")</li>
                    <li>@Html.ActionLink("Registration", "Registration", "auth")</li>
                </ul>

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

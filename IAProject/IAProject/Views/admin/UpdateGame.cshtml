
@{
    ViewBag.Title = "UpdateGame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br /><br /><br />

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading"> Update Game</div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" method="POST" action="#####">


                        <div class="form-group">
                            <label class="col-md-4 control-label">Name</label>

                            <div class="col-md-6">
                                <input type="text" class="form-control" name="name" value="">

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Link For Game Site</label>

                            <div class="col-md-6">
                                <input type="text" class="form-control" name="link" value="">

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Price</label>

                            <div class="col-md-6">
                                <div class="input-group">
                                    <div class="input-group-addon">$</div>
                                    <input type="text" class="form-control" id="exampleInputAmount" placeholder="price">
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-4 control-label">description</label>

                            <div class="col-md-6">
                                <textarea type="text" class="form-control" rows="3" cols="3" name="description"></textarea>

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Basic Rating</label>
                            <input id="input-7-xs" class="rating rating-loading" value="1" data-min="0" data-max="5" data-step="0.5" data-size="xs">
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Gategroy</label>

                            <div class="col-md-6">
                                <select class="form-control" name="gategroy">
                                    <option value="3">Stratgy</option>
                                    <option value="2">Action</option>
                                    <option value="4">Herror</option>
                                </select>


                            </div>
                        </div>





                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-btn fa-user"></i>Update This Game
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<br /><br /><br /><br />


